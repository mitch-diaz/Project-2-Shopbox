<h1>New Invoice</h1>

{{#if currentUser}}

<div class="newInvoice">
    <form action="/purchases/create" method="POST">

        <label for="customer">Customer: </label><br>
        <select name="customer" id="select">
            {{#each customers}}
                <option value="{{_id}}">{{firstName}}</option>
            {{/each}}
        </select>

        <br><br>

        <label> Invoice ID: <br>
            <input type="text" name="invoiceId" >
        </label>

        <br><br>

        <label for="invoiceDate">Order date:<br>
            <input type="date" name="invoiceDate" >
        </label>

        <br><br>

        <label for="books">Select Books: </label><br>
        <select name="books" id="select">
            {{#each books}}
                <option value="{{_id}}">{{title}} {{price}}</option>
            {{/each}}
        </select>

        <br><br>

        <label for="movies">Select Books: </label><br>
        <select name="movies" id="select">
            {{#each movies}}
                <option value="{{_id}}">{{title}} {{price}}</option>
            {{/each}}
        </select>

        <br><br>

        <label for="paymentMethod">Select a payment type:</label><br>
            <input type="radio" name="paymentMethod" value="Credit or debit card">Credit or debit card</input> <br>
            <input type="radio" name="paymentMethod" value="Gift card">Gift card</input> <br>
            <input type="radio" name="paymentMethod" value="Cash">Cash</input> <br>
        </select>

        <br><br>

        <label for="purchaseTotal">Purchase Total:<br>
            <input type="text" name="purchaseTotal">
        </label>

        <br><br>
        
        <button type="submit">Save Changes</button>

    </form>
</div>

{{/if}}