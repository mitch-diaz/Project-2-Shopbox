

<div class="signupPage">

<h1>Create Account</h1>

   <div class="signupContent">

   <form action="/auth/signup" method="POST">

   <label> First Name: <br>
      <input type="text" name="firstName" placeholder="First Name">
   </label>

   <br><br>

   <label> Last Name: <br>
      <input type="text" name="lastName">
   </label>

   <br><br>

   <label> Email: <br>
      <input type="text" name="email">
   </label>

   <br><br>

   <label> Password: <br>
      <input type="password" name="password">
   </label>

   <br><br>

   <label for="storeType">How do you sell?</label> <br>
   <select name="storeType" id="storeType">
      <option value="" disabled="disabled" selected="selected">--Please choose an option--</option>
      <option value="ONLINE STORE">Online store only</option>
      <option value="PHYSICAL STORE">Physical store only</option>
      <option value="ONLINE AND PHYSICAL STORE">I sell from a physical and online store</option>
   </select>

   <br><br>

   <label for="role">Assign access level:</label> <br>
   <select name="role" id="role">
      <option value="" disabled="disabled" selected="selected">--Please choose an option--</option>
      <option value="ADMIN">Admin</option>
      <option value="STAFF">Staff</option>
   </select>

   {{!-- <label>
      <input type="checkbox" value="true" name="admin">Admin <br>
   </label> --}}

   <br><br>

   <button type="submit">Submit</button>

</form>

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}

   </div>

</div>

